{
  "name": "library-ecommerce-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for library e-commerce API with backend and frontend",
  "scripts": {
    "dev": "pnpm --recursive --parallel run dev",
    "dev:backend": " nodemon --exec \"ts-node --project packages/backend/tsconfig.json\" -r tsconfig-paths/register  packages/backend/src/server.ts",
    "dev:frontend": "cd packages/frontend && npx vite && cd ../..",
    "build": "pnpm --recursive run build",
    "build:backend": "cd packages/backend && npx tsup",
    "build:frontend": "cd packages/frontend && vite build",
    "start:backend": "cd packages/backend && node dist/server.js",
    "test": "pnpm --recursive run test",
    "test:backend": "cd packages/backend && vitest",
    "test:frontend": "cd packages/frontend && vitest",
    "lint": "eslint packages/backend/src packages/frontend/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/backend/src packages/frontend/src --ext .ts,.tsx --fix",
    "db:migrate": "cd packages/backend && npx prisma migrate dev",
    "db:push": "cd packages/backend && npx prisma db push",
    "db:reset": "cd packages/backend && npx prisma migrate reset",
    "db:seed": "cd packages/backend && ts-node prisma/seed.ts",
    "db:studio": "cd packages/backend && npx prisma studio",
    "db:generate": "cd packages/backend && npx prisma generate",
    "clean": "rm -rf packages/backend/dist packages/frontend/dist node_modules/.cache",
    "typecheck": "cd packages/backend && tsc --noEmit && cd ../frontend && tsc --noEmit"
  },
  "keywords": [
    "monorepo",
    "ecommerce",
    "library",
    "api",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "csurf": "^1.11.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.18.0",
    "redis": "^5.9.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}
